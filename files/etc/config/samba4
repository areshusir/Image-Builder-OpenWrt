
config samba
	option workgroup 'WORKGROUP'
	option charset 'UTF-8'
	option description 'Samba on Home'
	option macos '1'

config sambashare
	option name 'Home'
	option path '/mnt/home/data'
	option read_only 'no'
	option users 'root'
	option guest_ok 'no'
	option create_mask '0666'
	option dir_mask '0777'

